<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.catering.mapper.BannerMapper">
    
    <resultMap type="Banner" id="BannerResult">
        <result property="bannerId"    column="banner_id"    />
        <result property="indexUrl"    column="index_url"    />
        <result property="merchantUrl"    column="merchant_url"    />
        <result property="collectorUrl"    column="collector_url"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectBannerVo">
        select banner_id, index_url, merchant_url, collector_url, status, create_by, create_time, update_by, update_time, remark from cy_banner
    </sql>

    <select id="selectBannerList" parameterType="Banner" resultMap="BannerResult">
        <include refid="selectBannerVo"/>
        <where>  
            <if test="status != null "> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectBannerById" parameterType="Long" resultMap="BannerResult">
        <include refid="selectBannerVo"/>
        where banner_id = #{bannerId}
    </select>
        
    <insert id="insertBanner" parameterType="Banner" useGeneratedKeys="true" keyProperty="bannerId">
        insert into cy_banner
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="indexUrl != null">index_url,</if>
            <if test="merchantUrl != null">merchant_url,</if>
            <if test="collectorUrl != null">collector_url,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="indexUrl != null">#{indexUrl},</if>
            <if test="merchantUrl != null">#{merchantUrl},</if>
            <if test="collectorUrl != null">#{collectorUrl},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateBanner" parameterType="Banner">
        update cy_banner
        <trim prefix="SET" suffixOverrides=",">
            <if test="indexUrl != null">index_url = #{indexUrl},</if>
            <if test="merchantUrl != null">merchant_url = #{merchantUrl},</if>
            <if test="collectorUrl != null">collector_url = #{collectorUrl},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where banner_id = #{bannerId}
    </update>

    <delete id="deleteBannerById" parameterType="Long">
        delete from cy_banner where banner_id = #{bannerId}
    </delete>

    <delete id="deleteBannerByIds" parameterType="String">
        delete from cy_banner where banner_id in 
        <foreach item="bannerId" collection="array" open="(" separator="," close=")">
            #{bannerId}
        </foreach>
    </delete>

</mapper>