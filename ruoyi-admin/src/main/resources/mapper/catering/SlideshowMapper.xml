<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.catering.mapper.SlideshowMapper">
    
    <resultMap type="Slideshow" id="SlideshowResult">
        <result property="slideshowId"    column="slideshow_id"    />
        <result property="scenarioNo"    column="scenario_no"    />
        <result property="scenarioName"    column="scenario_name"    />
        <result property="url"    column="url"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectSlideshowVo">
        select slideshow_id, scenario_no, scenario_name, url, status, create_by, create_time, update_by, update_time, remark from cy_slideshow
    </sql>

    <select id="selectSlideshowList" parameterType="Slideshow" resultMap="SlideshowResult">
        <include refid="selectSlideshowVo"/>
        <where>  
            <if test="scenarioNo != null "> and scenario_no = #{scenarioNo}</if>
            <if test="scenarioName != null  and scenarioName != ''"> and scenario_name like concat('%', #{scenarioName}, '%')</if>
            <if test="status != null "> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectSlideshowById" parameterType="Long" resultMap="SlideshowResult">
        <include refid="selectSlideshowVo"/>
        where slideshow_id = #{slideshowId}
    </select>
        
    <insert id="insertSlideshow" parameterType="Slideshow" useGeneratedKeys="true" keyProperty="slideshowId">
        insert into cy_slideshow
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="scenarioNo != null">scenario_no,</if>
            <if test="scenarioName != null">scenario_name,</if>
            <if test="url != null">url,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="scenarioNo != null">#{scenarioNo},</if>
            <if test="scenarioName != null">#{scenarioName},</if>
            <if test="url != null">#{url},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateSlideshow" parameterType="Slideshow">
        update cy_slideshow
        <trim prefix="SET" suffixOverrides=",">
            <if test="scenarioNo != null">scenario_no = #{scenarioNo},</if>
            <if test="scenarioName != null">scenario_name = #{scenarioName},</if>
            <if test="url != null">url = #{url},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where slideshow_id = #{slideshowId}
    </update>

    <delete id="deleteSlideshowById" parameterType="Long">
        delete from cy_slideshow where slideshow_id = #{slideshowId}
    </delete>

    <delete id="deleteSlideshowByIds" parameterType="String">
        delete from cy_slideshow where slideshow_id in 
        <foreach item="slideshowId" collection="array" open="(" separator="," close=")">
            #{slideshowId}
        </foreach>
    </delete>

</mapper>