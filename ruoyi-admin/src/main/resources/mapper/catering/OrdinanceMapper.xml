<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.catering.mapper.OrdinanceMapper">
    
    <resultMap type="Ordinance" id="OrdinanceResult">
        <result property="ordinanceId"    column="ordinance_id"    />
        <result property="title"    column="title"    />
        <result property="introduction"    column="introduction"    />
        <result property="content"    column="content"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectOrdinanceVo">
        select ordinance_id, title, introduction, content, status, create_by, create_time, update_by, update_time, remark from cy_ordinance
    </sql>

    <select id="selectOrdinanceList" parameterType="Ordinance" resultMap="OrdinanceResult">
        <include refid="selectOrdinanceVo"/>
        <where>  
            <if test="title != null  and title != ''"> and title like concat('%', #{title}, '%')</if>
            <if test="introduction != null  and introduction != ''"> and introduction like concat('%', #{introduction}, '%')</if>
            <if test="status != null "> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectOrdinanceById" parameterType="Long" resultMap="OrdinanceResult">
        <include refid="selectOrdinanceVo"/>
        where ordinance_id = #{ordinanceId}
    </select>
        
    <insert id="insertOrdinance" parameterType="Ordinance" useGeneratedKeys="true" keyProperty="ordinanceId">
        insert into cy_ordinance
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="title != null">title,</if>
            <if test="introduction != null">introduction,</if>
            <if test="content != null">content,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="title != null">#{title},</if>
            <if test="introduction != null">#{introduction},</if>
            <if test="content != null">#{content},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateOrdinance" parameterType="Ordinance">
        update cy_ordinance
        <trim prefix="SET" suffixOverrides=",">
            <if test="title != null">title = #{title},</if>
            <if test="introduction != null">introduction = #{introduction},</if>
            <if test="content != null">content = #{content},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where ordinance_id = #{ordinanceId}
    </update>

    <delete id="deleteOrdinanceById" parameterType="Long">
        delete from cy_ordinance where ordinance_id = #{ordinanceId}
    </delete>

    <delete id="deleteOrdinanceByIds" parameterType="String">
        delete from cy_ordinance where ordinance_id in 
        <foreach item="ordinanceId" collection="array" open="(" separator="," close=")">
            #{ordinanceId}
        </foreach>
    </delete>

</mapper>